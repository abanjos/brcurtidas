<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
        @if (Model.ScopedServiceType.PaymentType == 1) {
            <div class="form-group">
            <label for="recipient-name" class="col-form-label">Quantidade</label>
            <input type="text" class="form-control" id="customer_perfil">
            <small>Pedido mínimo 50 e máximo 10.000!</small>
          </div>
        }
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Perfil/Link</label>
            <input type="text" class="form-control" id="customer_perfil">
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">Nome e Sobrenome</label>
            <input type="text" class="form-control" id="customer_name">
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">E-mail</label>
            <input type="text" class="form-control" id="customer_email">
          </div>
          <div class="btn-group btn-group-toggle" data-toggle="buttons">
            <label class="btn payment-method-button active">
                <input value="pagseguro" type="radio" name="options" id="option1" autocomplete="off" checked> PagSeguro
            </label>
            <label class="btn payment-method-button">
                <input value="deposito_bancario" type="radio" name="options" id="option2" autocomplete="off"> Depósito Bancário
            </label>
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">
                <input required type="checkbox" id="check_terms"> Aceito todos os Termos de Uso</label>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
        <button type="button" class="btn btn-primary">Pagar</button>
      </div>
    </div>
  </div>
</div>